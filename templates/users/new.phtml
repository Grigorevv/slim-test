<form action="/users" method="post">
  <div>
    <label>
    name
      <input type="text" name="user[name]">
    </label>
  </div>
  <div>
    <label>
    email
      <input type="email" required name="user[email]">
    </label>
    </div>
  <div>
    <label>
    id
    <input type="id" required name="user[id]">
    </label>
    </div>
    <input type="submit" value="Sign Up">
</form>